'use client';
import { useState } from 'react';
import { RotateCcw } from 'lucide-react';

export default function TicTacToe() {
  const [board, setBoard] = useState(Array(9).fill(null));
  const [isXNext, setIsXNext] = useState(true);
  const [winner, setWinner] = useState<null | { player: string; line: number[] }>(null);

  // ---------------- HANDLE CLICK ----------------
  function handleClick(index: number) {
    if (board[index] || winner) return;

    const newBoard = [...board];
    newBoard[index] = isXNext ? "X" : "O";

    setBoard(newBoard);
    const win = checkWinner(newBoard);
    if (win) {
      setWinner(win);
    }
    setIsXNext(!isXNext);
  }

  // ---------------- CHECK WINNER ----------------
  const checkWinner = (square) =>{
    const lines = [
      [0, 1, 2], // rows
      [3, 4, 5],
      [6, 7, 8],
      [0, 3, 6], // cols
      [1, 4, 7],
      [2, 5, 8],
      [0, 4, 8], // diagonals
      [2, 4, 6],
    ];

    for(let line of lines){
      const [a, b, c] = line;
      if (square[a] && square[a] === square[b] && square[b] === square[c]){
        return {player: square[a]!, line};
      }
    }
    return null;
  }


  // ---------------- RESET ----------------
  function resetGame() {
    setBoard(Array(9).fill(null));
    setWinner(null);
    setIsXNext(true);
  }

  // ---------------- BUTTON ANIMATION ----------------
  const buttonAnimation = (condition: boolean) =>
    condition 
      ? "opacity-100 scale-100 pointer-events-auto"
      : "opacity-0 scale-95 pointer-events-none";

  return (
    <main className="flex flex-col items-center justify-center h-screen bg-[#F5F5F5]/10 rounded-xl border-none m-2 md:m-10
      shadow-[2px_2px_5px_3px_rgba(0,0,0,0.3)]">

        {/* STATUS TEXT */}0
        <h1 className="text-3xl font-semibold mb-4">
          {winner ? `${winner.player} wins! ðŸŽ‰` : `Next player: ${isXNext ? "X" : "O"}`}
        </h1>

        {/* GAME GRID */}
        <div className="grid grid-cols-3 gap-4">
          {board.map((value, index) => {
            const isWinningCell = winner?.line.includes(index);
            return (
              <button
                key={index}
                onClick={() => handleClick(index)}
                className={`
                  w-24 h-24 md:w-32 md:h-32 rounded-full bg-[#F5F5F5]/10 flex items-center justify-center 
                  text-5xl md:text-6xl font-bold z-10 transition-all duration-200 ease-in-out 
                  hover:bg-[#F5F5F5]/25 shadow-[2px_2px_5px_3px_rgba(0,0,0,0.2),_inset_2px_2px_5px_rgba(0,0,0,0.2)]
                  ${winner ? buttonAnimation(isWinningCell!) : buttonAnimation(true)}
                `}
              >
                {value}
              </button>
            );
          })}
        </div>

        {/* RESET BUTTON */}
        <button
          onClick={resetGame}
          className="mt-6 p-3 rounded-xl bg-black/90 text-white flex items-center gap-2
          transition-all duration-200 hover:bg-black"
        >
          <RotateCcw size={20} /> Reset
        </button>

    </main>
  );
}
